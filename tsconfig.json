{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        //"module": "ES2015",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "ES2023",
        "verbatimModuleSyntax": true
    }
}
