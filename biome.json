{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "useEditorconfig": true,
    "ignore": ["config/wiki_pages.json"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["app/static/wasm/**/*.ts"],
    "rules": {
      "complexity": {
        "noUselessStringConcat": "info",
        "noVoid": "error"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "warn",
        "noNodejsModules": "error",
        "noUndeclaredVariables": "warn",
        "noUnusedImports": "info",
        "noUnusedPrivateClassMembers": "info",
        "noUnusedVariables": "info",
        "useArrayLiterals": "info"
      },
      "recommended": true,
      "style": {
        "noDefaultExport": "warn",
        "noInferrableTypes": "info",
        "noNamespace": "error",
        "noParameterAssign": "off",
        "noParameterProperties": "error",
        "useCollapsedElseIf": "warn",
        "useConsistentArrayType": "warn",
        "useConsistentBuiltinInstantiation": "warn",
        "useForOf": "warn",
        "useShorthandAssign": "warn",
        "useThrowNewError": "warn",
        "useThrowOnlyError": "warn"
      },
      "suspicious": {
        "noEvolvingTypes": "info",
        "noExplicitAny": "off",
        "useAwait": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
